<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentSender"
    android:background="@color/color1"

    >


    <EditText
        android:id="@+id/tvMessageFromFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:textColor="@color/text"
        android:hint="@string/your_message_here"
        android:inputType="textPersonName"
        android:background="@color/fragmentTwo"
        app:layout_constraintEnd_toStartOf="@+id/btnFragmentMessageSend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFragmentMessageSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/send"
        android:textColor="@color/text"
        android:background="@color/containerColor"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvMessageFromFragment"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>